<%- include('partials/header', { pageTitle: 'Agencies' , page: 'agencies' }) %>

    <style>
        .ag-stats {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 28px;
        }

        .ag-stat-card {
            background: white;
            border-radius: 14px;
            border: 1px solid var(--border-color);
            box-shadow: var(--card-shadow);
            padding: 20px 24px;
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .ag-stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .ag-stat-lbl {
            font-size: 13px;
            color: var(--text-muted);
            margin-bottom: 2px;
        }

        .ag-stat-num {
            font-size: 26px;
            font-weight: 800;
            color: var(--text-dark);
        }

        /* Table */
        .ag-table-wrap {
            background: white;
            border-radius: 14px;
            border: 1px solid var(--border-color);
            box-shadow: var(--card-shadow);
            overflow: hidden;
        }

        .ag-toolbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 16px 20px;
            border-bottom: 1px solid var(--border-color);
            gap: 12px;
            flex-wrap: wrap;
        }

        .ag-search {
            display: flex;
            align-items: center;
            gap: 8px;
            background: #f8fafc;
            border-radius: 8px;
            padding: 0 12px;
            border: 1px solid var(--border-color);
        }

        .ag-search input {
            border: none;
            background: none;
            padding: 8px 0;
            font-size: 13px;
            outline: none;
            width: 220px;
        }

        .ag-filter-select {
            padding: 8px 12px;
            border-radius: 8px;
            border: 1px solid var(--border-color);
            font-size: 13px;
            background: white;
        }

        .ag-btn-create {
            background: var(--primary);
            color: white;
            border: none;
            padding: 9px 18px;
            border-radius: 8px;
            font-size: 13px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .ag-btn-create:hover {
            opacity: .9;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead tr {
            background: #f8fafc;
        }

        th {
            padding: 12px 16px;
            font-size: 11px;
            font-weight: 700;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: .5px;
            text-align: left;
            border-bottom: 1px solid var(--border-color);
        }

        td {
            padding: 14px 16px;
            font-size: 13px;
            color: var(--text-dark);
            border-bottom: 1px solid #f3f4f6;
            vertical-align: middle;
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        tbody tr:hover {
            background: #fafafa;
        }

        .ag-name {
            font-weight: 600;
            font-size: 14px;
        }

        .ag-code {
            font-family: monospace;
            font-size: 11px;
            color: var(--primary);
            background: #eff6ff;
            padding: 2px 6px;
            border-radius: 4px;
            margin-top: 3px;
            display: inline-block;
        }

        .status-approved {
            background: #dcfce7;
            color: #16a34a;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
        }

        .status-pending {
            background: #fef9c3;
            color: #ca8a04;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
        }

        .status-rejected {
            background: #fee2e2;
            color: #dc2626;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
        }

        .ag-host-pill {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            background: #eff6ff;
            color: #2563eb;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
        }

        .ag-coin-pill {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            background: #fffbeb;
            color: #92400e;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 700;
        }

        .ag-actions {
            display: flex;
            gap: 6px;
        }

        .ag-action-btn {
            padding: 6px 10px;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            font-size: 12px;
            font-weight: 600;
            transition: opacity .2s;
        }

        .ag-action-btn:hover {
            opacity: .8;
        }

        .ag-action-approve {
            background: #dcfce7;
            color: #16a34a;
        }

        .ag-action-reject {
            background: #fef9c3;
            color: #ca8a04;
        }

        .ag-action-delete {
            background: #fee2e2;
            color: #dc2626;
        }

        .ag-action-edit {
            background: #eff6ff;
            color: #2563eb;
        }

        /* Modal */
        .ag-modal-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, .5);
            z-index: 9999;
            align-items: center;
            justify-content: center;
        }

        .ag-modal-overlay.open {
            display: flex;
        }

        .ag-modal {
            background: white;
            border-radius: 16px;
            width: 100%;
            max-width: 500px;
            max-height: 90vh;
            overflow-y: auto;
            padding: 28px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, .15);
        }

        .ag-modal h3 {
            margin: 0 0 20px;
            font-size: 18px;
            font-weight: 700;
        }

        .ag-form-group {
            margin-bottom: 16px;
        }

        .ag-form-group label {
            display: block;
            font-size: 13px;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 6px;
        }

        .ag-form-group input,
        .ag-form-group select,
        .ag-form-group textarea {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid var(--border-color);
            border-radius: 8px;
            font-size: 13px;
            background: white;
            box-sizing: border-box;
        }

        .ag-form-group input:focus,
        .ag-form-group select:focus,
        .ag-form-group textarea:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, .1);
        }

        .ag-form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
        }

        .ag-modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 20px;
        }

        .ag-modal-cancel {
            padding: 10px 20px;
            border-radius: 8px;
            border: 1px solid var(--border-color);
            background: white;
            font-size: 13px;
            font-weight: 600;
            cursor: pointer;
        }

        .ag-modal-submit {
            padding: 10px 20px;
            border-radius: 8px;
            border: none;
            background: var(--primary);
            color: white;
            font-size: 13px;
            font-weight: 700;
            cursor: pointer;
        }

        .ag-modal-submit:hover {
            opacity: .9;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-muted);
        }

        .empty-state i {
            font-size: 40px;
            margin-bottom: 12px;
            display: block;
            opacity: .25;
        }
    </style>

    <div class="dashboard-header">
        <div>
            <h1><i class="fa fa-building" style="color:var(--primary);margin-right:10px;"></i>Agency Management</h1>
            <p>View and manage registered agencies, approve applications, and set commissions</p>
        </div>
        <button class="ag-btn-create" onclick="document.getElementById('createAgencyModal').classList.add('open')">
            <i class="fa fa-plus"></i> Create Agency
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="ag-stats">
        <div class="ag-stat-card">
            <div class="ag-stat-icon" style="background:#ede9fe;color:#7c3aed;"><i class="fa fa-building"></i></div>
            <div>
                <div class="ag-stat-lbl">Total Agencies</div>
                <div class="ag-stat-num">
                    <%= agencies.length %>
                </div>
            </div>
        </div>
        <div class="ag-stat-card">
            <div class="ag-stat-icon" style="background:#dcfce7;color:#16a34a;"><i class="fa fa-check-circle"></i></div>
            <div>
                <div class="ag-stat-lbl">Approved</div>
                <div class="ag-stat-num">
                    <%= agencies.filter(a=>a.status==='Approved').length %>
                </div>
            </div>
        </div>
        <div class="ag-stat-card">
            <div class="ag-stat-icon" style="background:#fef9c3;color:#ca8a04;"><i class="fa fa-clock-o"></i></div>
            <div>
                <div class="ag-stat-lbl">Pending</div>
                <div class="ag-stat-num">
                    <%= agencies.filter(a=>a.status==='Pending').length %>
                </div>
            </div>
        </div>
        <div class="ag-stat-card">
            <div class="ag-stat-icon" style="background:#ffe4e6;color:#be123c;"><i class="fa fa-users"></i></div>
            <div>
                <div class="ag-stat-lbl">Total Hosts</div>
                <div class="ag-stat-num">
                    <%= agencies.reduce((s,a)=>s+(a.hostCount||0),0) %>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="ag-table-wrap">
        <div class="ag-toolbar">
            <form method="GET" action="/admin/agencies"
                style="display:flex;gap:10px;align-items:center;flex-wrap:wrap;">
                <div class="ag-search">
                    <i class="fa fa-search" style="color:var(--text-muted);"></i>
                    <input type="text" name="search" value="<%= search %>" placeholder="Search Agency...">
                </div>
                <select name="status" class="ag-filter-select" onchange="this.form.submit()">
                    <option value="All" <%=filter==='All' ||!filter?'selected':'' %>>All Status</option>
                    <option value="Approved" <%=filter==='Approved' ?'selected':'' %>>Approved</option>
                    <option value="Pending" <%=filter==='Pending' ?'selected':'' %>>Pending</option>
                    <option value="Rejected" <%=filter==='Rejected' ?'selected':'' %>>Rejected</option>
                </select>
                <button type="submit" class="ag-btn-create"
                    style="background:#f3f4f6;color:var(--text-dark);border:1px solid var(--border-color);">
                    <i class="fa fa-filter"></i> Filter
                </button>
            </form>
            <span style="font-size:13px;color:var(--text-muted);">
                <%= agencies.length %> agencies
            </span>
        </div>

        <% if(agencies.length===0) { %>
            <div class="empty-state"><i class="fa fa-building"></i>
                <p>No agencies found. Create one above.</p>
            </div>
            <% } else { %>
                <div style="overflow-x:auto;">
                    <table>
                        <thead>
                            <tr>
                                <th>Agency</th>
                                <th>User (Owner)</th>
                                <th>Country</th>
                                <th>Contact Email</th>
                                <th>Mobile</th>
                                <th>Commission</th>
                                <th>Hosts</th>
                                <th>Host Earnings</th>
                                <th>Earnings</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% agencies.forEach(function(a) { %>
                                <tr>
                                    <td>
                                        <div style="display:flex;align-items:center;gap:10px;">
                                            <img src="<%= a.image||'https://ui-avatars.com/api/?name='+encodeURIComponent(a.name)+'&background=6366f1&color=fff' %>"
                                                onerror="this.src='https://ui-avatars.com/api/?name=A&background=6366f1&color=fff'"
                                                style="width:38px;height:38px;border-radius:9px;object-fit:cover;">
                                            <div>
                                                <div class="ag-name">
                                                    <%= a.name %>
                                                </div>
                                                <span class="ag-code">
                                                    <%= a.code %>
                                                </span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <% if(a.ownerId) { %>
                                            <div style="display:flex;align-items:center;gap:8px;">
                                                <img src="<%= a.ownerId.image||'https://ui-avatars.com/api/?name='+encodeURIComponent(a.ownerId.name||'O')+'&background=random' %>"
                                                    style="width:30px;height:30px;border-radius:50%;object-fit:cover;">
                                                <div>
                                                    <div style="font-weight:600;font-size:13px;">
                                                        <%= a.ownerId.name %>
                                                    </div>
                                                    <div style="font-size:11px;color:var(--text-muted);">@<%=
                                                            a.ownerId.userName %>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } else { %><span style="color:var(--text-muted);">—</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <%= a.country||'—' %>
                                    </td>
                                    <td>
                                        <%= a.contactEmail||'—' %>
                                    </td>
                                    <td>
                                        <%= a.mobile||'—' %>
                                    </td>
                                    <td><span style="font-weight:700;color:#16a34a;">
                                            <%= a.commissionRate %>%
                                        </span></td>
                                    <td><span class="ag-host-pill"><i class="fa fa-users"></i>
                                            <%= a.hostCount||0 %>
                                        </span></td>
                                    <td><span class="ag-coin-pill"><i class="fa fa-star"></i>
                                            <%= (a.hostEarnings||0).toLocaleString() %>
                                        </span></td>
                                    <td><span class="ag-coin-pill"><i class="fa fa-star"></i>
                                            <%= (a.totalAgencyEarnings||0).toLocaleString() %>
                                        </span></td>
                                    <td>
                                        <% if(a.status==='Approved' ) { %><span class="status-approved">Approved</span>
                                            <% } else if(a.status==='Pending' ) { %><span
                                                    class="status-pending">Pending</span>
                                                <% } else { %><span class="status-rejected">Rejected</span>
                                                    <div style="font-size:11px;color:var(--text-muted);margin-top:3px;">
                                                        <%= a.rejectionReason %>
                                                    </div>
                                                    <% } %>
                                    </td>
                                    <td style="white-space:nowrap;color:var(--text-muted);font-size:12px;">
                                        <%= new
                                            Date(a.createdAt).toLocaleDateString('en-US',{month:'short',day:'numeric',year:'numeric'})
                                            %>
                                    </td>
                                    <td>
                                        <div class="ag-actions">
                                            <% if(a.status==='Pending' ) { %>
                                                <form method="POST" action="/admin/agencies/<%= a._id %>/approve"
                                                    style="margin:0;">
                                                    <button class="ag-action-btn ag-action-approve" title="Approve"><i
                                                            class="fa fa-check"></i></button>
                                                </form>
                                                <button class="ag-action-btn ag-action-reject"
                                                    onclick="openRejectModal('<%= a._id %>')" title="Reject"><i
                                                        class="fa fa-times"></i></button>
                                                <% } %>
                                                    <button class="ag-action-btn ag-action-edit"
                                                        onclick="openCommissionModal('<%= a._id %>','<%= a.commissionRate %>')"
                                                        title="Edit Commission"><i class="fa fa-percent"></i></button>
                                                    <form method="POST" action="/admin/agencies/<%= a._id %>/delete"
                                                        onsubmit="return confirm('Delete this agency? All linked hosts will be unlinked.')"
                                                        style="margin:0;">
                                                        <button class="ag-action-btn ag-action-delete" title="Delete"><i
                                                                class="fa fa-trash"></i></button>
                                                    </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
                <% } %>
    </div>

    <!-- ── Create Agency Modal ── -->
    <div id="createAgencyModal" class="ag-modal-overlay">
        <div class="ag-modal">
            <div style="display:flex;align-items:center;justify-content:space-between;margin-bottom:20px;">
                <h3 style="margin:0;"><i class="fa fa-building"
                        style="color:var(--primary);margin-right:8px;"></i>Create Agency</h3>
                <button onclick="document.getElementById('createAgencyModal').classList.remove('open')"
                    style="background:none;border:none;font-size:20px;cursor:pointer;color:var(--text-muted);">×</button>
            </div>
            <form method="POST" action="/admin/agencies/create">
                <div class="ag-form-group">
                    <label>Select User (Owner)</label>
                    <select name="ownerId" required>
                        <option value="">— Select User —</option>
                        <% allUsers.forEach(function(u){ %>
                            <option value="<%= u._id %>">
                                <%= u.name %> (@<%= u.userName %>)
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="ag-form-group">
                    <label>Agency Name</label>
                    <input type="text" name="name" placeholder="Agency Name" required>
                </div>
                <div class="ag-form-row">
                    <div class="ag-form-group">
                        <label>Contact Email</label>
                        <input type="email" name="contactEmail" placeholder="contact@agency.com">
                    </div>
                    <div class="ag-form-group">
                        <label>Mobile Number</label>
                        <input type="text" name="mobile" placeholder="+1 234 567 8900">
                    </div>
                </div>
                <div class="ag-form-row">
                    <div class="ag-form-group">
                        <label>Commission Rate (%)</label>
                        <input type="number" name="commissionRate" placeholder="10" min="0" max="100" step="0.5"
                            value="10">
                    </div>
                    <div class="ag-form-group">
                        <label>Country</label>
                        <input type="text" name="country" placeholder="United States">
                    </div>
                </div>
                <div class="ag-form-group">
                    <label>Description</label>
                    <textarea name="description" rows="3" placeholder="Brief description of the agency..."></textarea>
                </div>
                <div class="ag-modal-footer">
                    <button type="button" class="ag-modal-cancel"
                        onclick="document.getElementById('createAgencyModal').classList.remove('open')">Cancel</button>
                    <button type="submit" class="ag-modal-submit"><i class="fa fa-building"></i> Create Agency</button>
                </div>
            </form>
        </div>
    </div>

    <!-- ── Reject Modal ── -->
    <div id="rejectModal" class="ag-modal-overlay">
        <div class="ag-modal" style="max-width:380px;">
            <h3>Reject Agency</h3>
            <form id="rejectForm" method="POST" action="">
                <div class="ag-form-group">
                    <label>Reason for rejection (optional)</label>
                    <textarea name="reason" rows="3" placeholder="Not meeting our criteria..."></textarea>
                </div>
                <div class="ag-modal-footer">
                    <button type="button" class="ag-modal-cancel"
                        onclick="document.getElementById('rejectModal').classList.remove('open')">Cancel</button>
                    <button type="submit" class="ag-modal-submit" style="background:#dc2626;">Confirm Rejection</button>
                </div>
            </form>
        </div>
    </div>

    <!-- ── Edit Commission Modal ── -->
    <div id="commissionModal" class="ag-modal-overlay">
        <div class="ag-modal" style="max-width:340px;">
            <h3>Update Commission Rate</h3>
            <form id="commissionForm" method="POST" action="">
                <div class="ag-form-group">
                    <label>Commission Rate (%)</label>
                    <input type="number" name="rate" id="commissionRate" min="0" max="100" step="0.5">
                </div>
                <div class="ag-modal-footer">
                    <button type="button" class="ag-modal-cancel"
                        onclick="document.getElementById('commissionModal').classList.remove('open')">Cancel</button>
                    <button type="submit" class="ag-modal-submit">Update</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function openRejectModal(id) {
            document.getElementById('rejectForm').action = '/admin/agencies/' + id + '/reject';
            document.getElementById('rejectModal').classList.add('open');
        }
        function openCommissionModal(id, rate) {
            document.getElementById('commissionForm').action = '/admin/agencies/' + id + '/commission';
            document.getElementById('commissionRate').value = rate;
            document.getElementById('commissionModal').classList.add('open');
        }
        // Close on backdrop click
        document.querySelectorAll('.ag-modal-overlay').forEach(el => {
            el.addEventListener('click', function (e) { if (e.target === this) this.classList.remove('open'); });
        });
    </script>

    <%- include('partials/footer') %>