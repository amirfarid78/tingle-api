<%- include('partials/header', { pageTitle: 'User Details' , page: 'users' }) %>

    <style>
        /* ‚îÄ‚îÄ‚îÄ Layout ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
        .ud-layout {
            display: grid;
            grid-template-columns: 300px 1fr;
            gap: 24px;
            align-items: start;
        }

        /* ‚îÄ‚îÄ‚îÄ Hero Card ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ */
        .ud-hero-card {
            background: white;
            border-radius: 16px;
            border: 1px solid var(--border-color);
            box-shadow: var(--card-shadow);
            overflow: hidden;
        }

        .ud-hero-banner {
            height: 80px;
            background: linear-gradient(135deg, #818cf8, #6366f1 50%, #a78bfa);
        }

        .ud-hero-body {
            padding: 0 20px 20px;
            text-align: center;
        }

        .ud-avatar-wrap {
            position: relative;
            display: inline-block;
            margin-top: -40px;
            margin-bottom: 10px;
        }

        .ud-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid white;
            box-shadow: 0 4px 12px rgba(0, 0, 0, .12);
        }

        .ud-dot {
            position: absolute;
            bottom: 3px;
            right: 3px;
            width: 14px;
            height: 14px;
            border-radius: 50%;
            border: 2px solid white;
        }

        .ud-dot.on {
            background: #22c55e;
        }

        .ud-dot.off {
            background: #94a3b8;
        }

        .ud-name {
            font-size: 18px;
            font-weight: 700;
            color: var(--text-dark);
            margin: 0 0 3px;
        }

        .ud-uname {
            font-size: 13px;
            color: var(--text-muted);
            margin: 0 0 12px;
        }

        .ud-badges {
            display: flex;
            gap: 6px;
            justify-content: center;
            flex-wrap: wrap;
            margin-bottom: 16px;
        }

        .ud-badge {
            padding: 3px 10px;
            border-radius: 20px;
            font-size: 11px;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

        .ud-badge.vip {
            background: linear-gradient(135deg, #fef3c7, #fde68a);
            color: #92400e;
        }

        .ud-badge.blocked {
            background: #fef2f2;
            color: #b91c1c;
        }

        .ud-badge.admin {
            background: #fef9c3;
            color: #854d0e;
        }

        .ud-badge.agency {
            background: #e0e7ff;
            color: #3730a3;
        }

        .ud-badge.host {
            background: #ede9fe;
            color: #6d28d9;
        }

        .ud-badge.verified {
            background: #dcfce7;
            color: #166534;
        }

        /* Action Buttons */
        .ud-actions {
            display: flex;
            gap: 8px;
            justify-content: center;
            margin-bottom: 16px;
            flex-wrap: wrap;
        }

        .ud-btn {
            padding: 7px 16px;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 600;
            cursor: pointer;
            border: none;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            transition: opacity .2s;
        }

        .ud-btn:hover {
            opacity: .85;
        }

        .ud-btn.block {
            background: #fef2f2;
            color: #b91c1c;
        }

        .ud-btn.unblock {
            background: #f0fdf4;
            color: #166534;
        }

        .ud-btn.del {
            background: #f3f4f6;
            color: #6b7280;
        }

        /* Info List */
        .ud-info-list {
            list-style: none;
            padding: 0;
            margin: 0;
            text-align: left;
            border-top: 1px solid var(--border-color);
            padding-top: 14px;
        }

        .ud-info-list li {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 7px 0;
            font-size: 13px;
            border-bottom: 1px solid #f3f4f6;
        }

        .ud-info-list li:last-child {
            border-bottom: none;
        }

        .ud-ii {
            width: 26px;
            height: 26px;
            border-radius: 6px;
            background: #f3f4f6;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6366f1;
            font-size: 11px;
            flex-shrink: 0;
        }

        .ud-il {
            color: var(--text-muted);
            flex: 1;
        }

        .ud-iv {
            color: var(--text-dark);
            font-weight: 600;
            font-size: 12px;
        }

        /* Social Strip */
        .ud-social {
            background: white;
            border-radius: 14px;
            border: 1px solid var(--border-color);
            box-shadow: var(--card-shadow);
            padding: 16px;
            margin-top: 14px;
        }

        .ud-social h5 {
            font-size: 11px;
            font-weight: 600;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: .5px;
            margin: 0 0 12px;
        }

        .ud-stat-row {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            text-align: center;
            gap: 8px;
        }

        .ud-sn {
            font-size: 20px;
            font-weight: 800;
            color: var(--text-dark);
            line-height: 1;
        }

        .ud-sl {
            font-size: 10px;
            color: var(--text-muted);
            margin-top: 3px;
        }

        /* Activity Strip */
        .ud-activity {
            background: white;
            border-radius: 14px;
            border: 1px solid var(--border-color);
            box-shadow: var(--card-shadow);
            padding: 16px;
            margin-top: 14px;
        }

        .ud-activity h5 {
            font-size: 11px;
            font-weight: 600;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: .5px;
            margin: 0 0 12px;
        }

        .ud-act-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
        }

        .ud-act-item {
            background: #f8fafc;
            border-radius: 10px;
            padding: 12px;
            text-align: center;
        }

        .ud-act-num {
            font-size: 18px;
            font-weight: 800;
            color: var(--text-dark);
        }

        .ud-act-icon {
            font-size: 16px;
            margin-bottom: 4px;
        }

        .ud-act-lbl {
            font-size: 11px;
            color: var(--text-muted);
        }

        /* Right Column */
        .ud-right {
            display: flex;
            flex-direction: column;
            gap: 18px;
        }

        /* Stat Cards */
        .ud-coin-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 14px;
        }

        .ud-coin-card {
            background: white;
            border-radius: 12px;
            border: 1px solid var(--border-color);
            box-shadow: var(--card-shadow);
            padding: 16px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .ud-ci {
            width: 42px;
            height: 42px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            flex-shrink: 0;
        }

        .ud-cl {
            font-size: 11px;
            color: var(--text-muted);
            margin-bottom: 2px;
        }

        .ud-cv {
            font-size: 20px;
            font-weight: 800;
            color: var(--text-dark);
        }

        /* Account Card */
        .ud-acct-card {
            background: white;
            border-radius: 12px;
            border: 1px solid var(--border-color);
            box-shadow: var(--card-shadow);
            padding: 18px 20px;
        }

        .ud-acct-card h4 {
            font-size: 14px;
            font-weight: 700;
            margin: 0 0 14px;
            color: var(--text-dark);
        }

        .ud-acct-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 9px 0;
            border-bottom: 1px solid #f3f4f6;
            font-size: 13px;
        }

        .ud-acct-row:last-child {
            border-bottom: none;
        }

        .ud-acct-row .lbl {
            color: var(--text-muted);
        }

        /* Tabs */
        .ud-tabs-wrap {
            background: white;
            border-radius: 14px;
            border: 1px solid var(--border-color);
            box-shadow: var(--card-shadow);
            overflow: hidden;
        }

        .ud-tab-nav {
            display: flex;
            border-bottom: 1px solid var(--border-color);
            padding: 0 16px;
            overflow-x: auto;
            gap: 2px;
        }

        .ud-tab-nav::-webkit-scrollbar {
            height: 0;
        }

        .ud-tab-btn {
            padding: 13px 14px;
            font-size: 12px;
            font-weight: 600;
            color: var(--text-muted);
            cursor: pointer;
            border: none;
            background: none;
            border-bottom: 2px solid transparent;
            margin-bottom: -1px;
            transition: all .15s;
            white-space: nowrap;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .ud-tab-btn.active {
            color: var(--primary);
            border-bottom-color: var(--primary);
        }

        .ud-tab-body {
            padding: 18px 20px;
        }

        .ud-tab-pane {
            display: none;
        }

        .ud-tab-pane.active {
            display: block;
        }

        /* History Summaries */
        .ud-hist-sums {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            margin-bottom: 16px;
        }

        .ud-hsc {
            border-radius: 10px;
            padding: 12px;
            display: flex;
            align-items: center;
            gap: 9px;
        }

        .ud-hsc.all {
            background: #f8fafc;
        }

        .ud-hsc.inc {
            background: #f0fdf4;
        }

        .ud-hsc.out {
            background: #fef2f2;
        }

        .ud-hsi {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 13px;
        }

        .ud-hsi.all {
            background: #e2e8f0;
            color: #475569;
        }

        .ud-hsi.inc {
            background: #bbf7d0;
            color: #166534;
        }

        .ud-hsi.out {
            background: #fecaca;
            color: #b91c1c;
        }

        /* Txn List */
        .ud-txn-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 0;
            border-bottom: 1px solid #f3f4f6;
        }

        .ud-txn-item:last-child {
            border-bottom: none;
        }

        .ud-txi {
            width: 36px;
            height: 36px;
            border-radius: 9px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            flex-shrink: 0;
        }

        .ud-txi.inc {
            background: #dcfce7;
            color: #16a34a;
        }

        .ud-txi.out {
            background: #fee2e2;
            color: #dc2626;
        }

        .ud-tit {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-dark);
        }

        .ud-tdt {
            font-size: 11px;
            color: var(--text-muted);
            margin-top: 1px;
        }

        .ud-tam {
            font-size: 14px;
            font-weight: 700;
        }

        .ud-tam.inc {
            color: #16a34a;
        }

        .ud-tam.out {
            color: #dc2626;
        }

        /* User Cards (followers / following) */
        .ud-user-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 12px;
        }

        .ud-user-card {
            background: #f8fafc;
            border-radius: 12px;
            padding: 14px;
            display: flex;
            align-items: center;
            gap: 10px;
            border: 1px solid #f1f5f9;
        }

        .ud-uca {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            flex-shrink: 0;
        }

        .ud-ucn {
            font-size: 13px;
            font-weight: 600;
            color: var(--text-dark);
        }

        .ud-ucu {
            font-size: 11px;
            color: var(--text-muted);
        }

        .ud-uc-dot {
            display: inline-block;
            width: 7px;
            height: 7px;
            border-radius: 50%;
            margin-right: 4px;
        }

        .ud-uc-dot.on {
            background: #22c55e;
        }

        .ud-uc-dot.off {
            background: #94a3b8;
        }

        /* Video / Post Grid */
        .ud-media-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
            gap: 12px;
        }

        .ud-media-item {
            background: #f8fafc;
            border-radius: 10px;
            overflow: hidden;
            border: 1px solid #e5e7eb;
        }

        .ud-media-thumb {
            width: 100%;
            height: 100px;
            object-fit: cover;
            background: #e2e8f0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .ud-media-info {
            padding: 8px;
        }

        .ud-media-caption {
            font-size: 11px;
            color: var(--text-muted);
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .ud-media-stats {
            display: flex;
            gap: 8px;
            font-size: 10px;
            color: var(--text-muted);
            margin-top: 4px;
        }

        /* Live Sessions */
        .ud-live-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 0;
            border-bottom: 1px solid #f3f4f6;
        }

        .ud-live-item:last-child {
            border-bottom: none;
        }

        .ud-live-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            flex-shrink: 0;
        }

        .ud-live-icon.normal {
            background: #ede9fe;
            color: #7c3aed;
        }

        .ud-live-icon.pk {
            background: #fee2e2;
            color: #dc2626;
        }

        .ud-live-icon.audio {
            background: #dbeafe;
            color: #2563eb;
        }

        .ud-ltitle {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-dark);
        }

        .ud-lmeta {
            font-size: 12px;
            color: var(--text-muted);
            margin-top: 2px;
        }

        .ud-lpills {
            margin-left: auto;
            text-align: right;
        }

        .ud-lpill {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 11px;
            font-weight: 600;
            background: #f3f4f6;
            color: #6b7280;
            margin-left: 4px;
        }

        .ud-lpill.coin {
            background: #fffbeb;
            color: #92400e;
        }

        .ud-lpill.view {
            background: #eff6ff;
            color: #1d4ed8;
        }

        /* Empty state */
        .ud-empty {
            text-align: center;
            padding: 36px 20px;
            color: var(--text-muted);
        }

        .ud-empty i {
            font-size: 32px;
            margin-bottom: 10px;
            display: block;
            opacity: .25;
        }

        .ud-empty p {
            font-size: 13px;
        }
    </style>

    <!-- Page Header -->
    <div class="dashboard-header">
        <div>
            <h1 style="display:flex;align-items:center;gap:12px;">
                <a href="/admin/users" style="color:var(--text-muted);font-size:20px;"><i
                        class="fa fa-arrow-left"></i></a>
                User Profile
            </h1>
            <p>Detailed profile, activity, coin history, and social graph</p>
        </div>
        <div style="display:flex;gap:10px;">
            <form method="POST" action="/admin/users/<%= user._id %>/block" style="display:inline;">
                <button type="submit" class="ud-btn <%= user.isBlock ? 'unblock' : 'block' %>">
                    <i class="fa <%= user.isBlock ? 'fa-unlock' : 'fa-lock' %>"></i>
                    <%= user.isBlock ? 'Unblock' : 'Block User' %>
                </button>
            </form>
            <form method="POST" action="/admin/users/<%= user._id %>/delete"
                onsubmit="return confirm('Permanently delete this user?')" style="display:inline;">
                <button type="submit" class="ud-btn del"><i class="fa fa-trash-o"></i> Delete</button>
            </form>
        </div>
    </div>

    <div class="ud-layout">
        <!-- ‚îÄ‚îÄ LEFT COLUMN ‚îÄ‚îÄ -->
        <div>
            <!-- Profile Hero Card -->
            <div class="ud-hero-card">
                <div class="ud-hero-banner"></div>
                <div class="ud-hero-body">
                    <div class="ud-avatar-wrap">
                        <img class="ud-avatar"
                            src="<%= user.image || 'https://ui-avatars.com/api/?name='+encodeURIComponent(user.name||'U')+'&background=818cf8&color=fff&bold=true' %>"
                            onerror="this.src='https://ui-avatars.com/api/?name='+encodeURIComponent(user.name||'U')+'&background=818cf8&color=fff&bold=true'">
                        <span class="ud-dot <%= user.isOnline ? 'on' : 'off' %>"></span>
                    </div>
                    <h2 class="ud-name">
                        <%= user.name || 'Unknown User' %>
                    </h2>
                    <p class="ud-uname">@<%= user.userName || '-' %> &nbsp;¬∑&nbsp; #<%= user.uniqueId || '‚Äî' %>
                    </p>
                    <div class="ud-badges">
                        <% if(user.isVIP) { %><span class="ud-badge vip"><i class="fa fa-crown"></i> VIP</span>
                            <% } %>
                                <% if(user.isBlock) { %><span class="ud-badge blocked"><i class="fa fa-ban"></i>
                                        Blocked</span>
                                    <% } %>
                                        <% if(user.isVerified) { %><span class="ud-badge verified"><i
                                                    class="fa fa-check"></i> Verified</span>
                                            <% } %>
                                                <% if(user.isHost) { %><span class="ud-badge host"><i
                                                            class="fa fa-microphone"></i> Host</span>
                                                    <% } %>
                                                        <% if(user.role===1) { %><span class="ud-badge admin"><i
                                                                    class="fa fa-shield"></i> Admin</span>
                                                            <% } %>
                                                                <% if(user.role===2) { %><span
                                                                        class="ud-badge agency"><i
                                                                            class="fa fa-building"></i> Agency</span>
                                                                    <% } %>
                    </div>
                    <div class="ud-actions">
                        <form method="POST" action="/admin/users/<%= user._id %>/block" style="margin:0;">
                            <button type="submit" class="ud-btn <%= user.isBlock ? 'unblock' : 'block' %>">
                                <i class="fa <%= user.isBlock ? 'fa-unlock-alt' : 'fa-lock' %>"></i>
                                <%= user.isBlock ? 'Unblock' : 'Block' %>
                            </button>
                        </form>
                        <form method="POST" action="/admin/users/<%= user._id %>/verify" style="margin:0;">
                            <button type="submit" class="ud-btn" style="background:#eff6ff;color:#1d4ed8;">
                                <i class="fa fa-check-circle"></i>
                                <%= user.isVerified ? 'Unverify' : 'Verify' %>
                            </button>
                        </form>
                    </div>
                    <!-- Info List -->
                    <ul class="ud-info-list">
                        <li><span class="ud-ii"><i class="fa fa-envelope-o"></i></span><span
                                class="ud-il">Email</span><span class="ud-iv">
                                <%= user.email || '‚Äî' %>
                            </span></li>
                        <li><span class="ud-ii"><i
                                    class="fa <%= user.gender==='Female'?'fa-venus':'fa-mars' %>"></i></span><span
                                class="ud-il">Gender</span><span class="ud-iv">
                                <%= user.gender||'‚Äî' %>
                            </span></li>
                        <li><span class="ud-ii"><i class="fa fa-birthday-cake"></i></span><span
                                class="ud-il">Age</span><span class="ud-iv">
                                <%= user.age||'‚Äî' %>
                            </span></li>
                        <li><span class="ud-ii"><i class="fa fa-globe"></i></span><span
                                class="ud-il">Country</span><span class="ud-iv">
                                <%= user.country||'‚Äî' %>
                            </span></li>
                        <li><span class="ud-ii"><i class="fa fa-phone"></i></span><span class="ud-il">Mobile</span><span
                                class="ud-iv">
                                <%= user.mobileNumber||'‚Äî' %>
                            </span></li>
                        <li><span class="ud-ii"><i class="fa fa-calendar"></i></span><span
                                class="ud-il">Joined</span><span class="ud-iv">
                                <%= new
                                    Date(user.createdAt).toLocaleDateString('en-US',{month:'short',day:'numeric',year:'numeric'})
                                    %>
                            </span></li>
                        <li><span class="ud-ii"><i class="fa fa-clock-o"></i></span><span class="ud-il">Last
                                Login</span><span class="ud-iv">
                                <%= user.lastlogin ? new
                                    Date(user.lastlogin).toLocaleDateString('en-US',{month:'short',day:'numeric',year:'numeric'})
                                    : '‚Äî' %>
                            </span></li>
                        <li><span class="ud-ii"><i class="fa fa-tag"></i></span><span class="ud-il">Referral</span><span
                                class="ud-iv" style="font-family:monospace">
                                <%= user.referralCode||'‚Äî' %>
                            </span></li>
                        <li><span class="ud-ii"><i class="fa fa-code"></i></span><span class="ud-il">Wealth
                                Level</span><span class="ud-iv">
                                <%= user.wealthLevel||'‚Äî' %>
                            </span></li>
                        <li><span class="ud-ii"><i class="fa fa-map-marker"></i></span><span class="ud-il">IP
                                Address</span><span class="ud-iv">
                                <%= user.ipAddress||'‚Äî' %>
                            </span></li>
                    </ul>
                </div>
            </div>

            <!-- Social Stats -->
            <div class="ud-social">
                <h5>Social Stats</h5>
                <div class="ud-stat-row">
                    <div>
                        <div class="ud-sn">
                            <%= user.totalFollowers||0 %>
                        </div>
                        <div class="ud-sl">Followers</div>
                    </div>
                    <div>
                        <div class="ud-sn">
                            <%= user.totalFollowing||0 %>
                        </div>
                        <div class="ud-sl">Following</div>
                    </div>
                    <div>
